@model RadCms.Entities.FooterItem

@{
    ViewBag.Title = "Create";
}
<style>
    .horizontal{
        display: none;
    }
</style>
<h2>Create</h2>

@Scripts.Render("~/bundles/jqueryval")
<script src="@Url.Content("~/Scripts/editor/footer-editor.js")" type="text/javascript" ></script>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>FooterItem</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Section)
        </div>
        <div class="editor-field">
            @Html.DropDownList("header", new SelectList(ViewBag.Sections), new { @size = "7" })
            @Html.ValidationMessageFor(model => model.Section)
        </div>
        <div>
            <div class="vertical">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Title)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>
            <div class="horizontal">
                <div class="editor-label">
                    @Html.Label("Link icon")
                </div>
                <div class="editor-field">
                    <textarea class="cms-editable" cols="5" rows="5" ></textarea>
                </div>
            </div>

        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Link)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Link)
            @Html.ValidationMessageFor(model => model.Link)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Target)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Target, new SelectList(@ViewBag.Targets, "Value", "Key", "Select a Section..."), new { @size = "4" })
            @Html.ValidationMessageFor(model => model.Target)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
