@model IEnumerable<RadCms.Entities.FooterItem>

@{
    ViewBag.Title = "All footer items";
}

<h2>Footer  Items</h2>



@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>
            @Html.DropDownList("Section", new SelectList(@ViewBag.Sections, "Select a Section..."), new { @size = "7" })
            </td>
            <td>
            <input type="submit" value="Find" />
            </td>
            <td>
            @Html.ActionLink("Add New Item", "Create")
            </td>
            <td>
            @Html.ActionLink("Add New Section", "Create", "FooterSection", null, null)
            <br />
            @Html.ActionLink("Manage Sections", "Index", "FooterSection", null, null)
            </td>
        </tr>
    </table>
}

<table>
    <tr>
        <th>
            Section
        </th>
        <th>
            Title
        </th>
        <th>
            Link
        </th>
        <th>
            Target
        </th>
        <th>
            Index
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Section.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Target)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Index)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
