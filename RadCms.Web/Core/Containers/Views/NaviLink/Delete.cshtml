@model RadCms.Entities.NaviLink
@{
    ViewBag.Title = "Delete";
    Layout = "~/Core/Views/Shared/_LayoutCmsPopup.cshtml";     
}
@using RadCms.Helpers
@if (@Model.NaviHeading.NaviNode.Parent != null)
{    
    <div>@Html.ActionBreadcrumbCms(@Model.NaviHeading.NaviNode)
    </div>
}
<p>
</p>
<h3>
    Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Right Bar Link</legend>
    <div class="display-label">
        Url</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Url)
    </div>
    <div class="display-label">
        Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
        Nav Order</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LinkOrder)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to Section", "Navi", "Section", new { id = @Model.NaviHeading.NaviNode.Id }, null)
    </p>
}
